<Window x:Class="DatabaseLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseLab"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="AssetsButton" Content="Show Assets" HorizontalAlignment="Left" Margin="52,59,0,0" VerticalAlignment="Top" Width="141" Click="AssetsButton_Click" Height="130"/>
        <TextBlock x:Name="AssetText" HorizontalAlignment="Left" Margin="198,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="130" Width="545" Background="#FFE0E0E0" Foreground="Black"/>
        <Button x:Name="EmployeesButton" Content="Show Employees" HorizontalAlignment="Left" Margin="52,234,0,0" VerticalAlignment="Top" Width="141" Height="128" Click="EmployeesButton_Click"/>
        <TextBlock x:Name="EmployeeText" HorizontalAlignment="Left" Margin="198,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="128" Width="545" Background="#FFE0E0E0"/>

    </Grid>
</Window>
